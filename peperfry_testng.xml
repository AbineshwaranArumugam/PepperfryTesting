<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Pepperfry Test Suite">
	<test name="Pepperfry Functional Tests - Chrome Browser">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.pepperfry.pom_testing.TestRunner">
				<methods>
					<include name="validateTitle" />
					<include name="navigateToSetteesAndBenches" />
					<include name="displayFurnitureTypes" />
					<include name="filterByMetalBenches" />
					<include name="validateMetalBenches" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Pepperfry Functional Tests - Edge Browser">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.pepperfry.pom_testing.TestRunner">
				<methods>
					<include name="validateTitle" />
					<include name="navigateToSetteesAndBenches" />
					<include name="displayFurnitureTypes" />
					<include name="filterByMetalBenches" />
					<include name="validateMetalBenches" />
				</methods>
			</class>
		</classes>
	</test>
</suite>



